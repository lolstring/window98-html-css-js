{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./",
    "paths": {
      "*": ["app/types/*.d.ts"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.d.ts",
    "app/types/clippy.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "out",
    "app/installed-programs/*",
    "app/installed-programs/clippy/build/clippy.js"
  ]
}